{
  "parser": "babel-eslint",

  "extends": "eslint:recommended",

  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },

  "rules": {
    "semi": ["error", "never"],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_|when|to", "varsIgnorePattern": "^_" }],
    "no-console": "off",
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "never"],
    "arrow-parens": ["error", "as-needed"]
  }
}
